[Unit]
Description=UDP 7200
Documentation=https://github.com/sunbear88/scvps
After=syslog.target network-online.target

[Service]
User=root
NoNewPrivileges=true
ExecStart=/usr/local/sunbearvpn/udp-mini --listen-addr 127.0.0.1:7200 --max-clients 100
Restart=on-failure
RestartPreventExitStatus=23
LimitNPROC=10000
LimitNOFILE=1000000

[Install]
WantedBy=multi-user.target
