[Unit]
Description=WebSocket By ePro
Documentation=https://github.com/sunbear88/scvps
After=syslog.target network-online.target

[Service]
User=root
NoNewPrivileges=true
ExecStart=/usr/local/sunbearvpn/ws-epro -f /etc/sunbearvpn/ws-epro.conf
Restart=on-failure
RestartPreventExitStatus=23
LimitNPROC=10000
LimitNOFILE=1000000

[Install]
WantedBy=multi-user.target
